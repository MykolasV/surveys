extends layout

block main
  form(action="/surveys" method="post")
    dl
      dt
        label(for="surveyTitle") Enter the title for your new survey:
      dd
        input(type="text"
              id="surveyTitle"
              name="surveyTitle"
              placeholder="Survey Title")

    fieldset.actions
      input(type="submit" value="Save")
      a(href="/surveys") Cancel
